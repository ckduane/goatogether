
<div class='journey-show'>
  <h2><%= @journey.name %></h2>
  <p><%= format_time(@journey.start_time) %> - <%= format_time(@journey.end_time) %></p>
  <div class="results-data hidden" aria-hidden="true"><%=sanitize(@combined_results)%></div>


</div>
<%
=begin %>
<% @posts.each do |post| %>
  <% if post.provider == twitter %>
    <p>
    <% post.content %></p>
  <% else %>
    <p><i class="fa fa-instagram" aria-hidden="true"></i>
    <% post.content %></p>
  <% end %>
<% end %>
<%
=end %>
